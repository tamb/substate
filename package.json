{
  "name": "substate",
  "version": "10.0.0-alpha.0",
  "description": "Pub/Sub pattern with State Management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "scripts": {
    "test": "vitest --run",
    "build": "rollup -c",
    "test.watch": "vitest",
    "pre": "npm test && npm run build && npm publish --tag next",
    "safe-publish": "npm test && npm run build && npm publish",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TomSaporito/substate.git"
  },
  "keywords": [
    "state",
    "flux",
    "pubsub",
    "immutability",
    "modules",
    "state management"
  ],
  "author": "Tamb (Tom Saporito) <tsaporito@protonmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/clone-deep": "^4.0.4",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2",
    "stacktrace-js": "^2.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "clone-deep": "^4.0.1",
    "object-bystring": "^6.0.2"
  }
}
