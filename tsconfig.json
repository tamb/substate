{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.js",
    "dist/**/*",
    "integration-tests/**/*",
    "build-tests/**/*",
    "performance-tests/**/*",
    "node_modules/**/*"
  ]
}
